import scala.util.continuations._

size(600, 400)
frameRate(15)

case class Point(x: Int, y: Int) {
  def + (p:Point) = Point(x + p.x, y + p.y)
}

var cur: Unit => Unit = { (u: Unit) =>
  reset {
    var x = 0
    while(true) {
      x = (x + 1) % width
      background(255)
      color(0)
      line(width - x, 0, x, height)
      shift { k: (Unit => Unit) =>
        cur = k
      }
    }
    ()
  }
}

def draw() {
  cur()
}